<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="8.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.clinic.controllers.RecordsController">
    <children>
        <HBox spacing="8.0">
            <TextField fx:id="patientIdField" promptText="Mã bệnh nhân" />
            <DatePicker fx:id="fromDate" promptText="Từ ngày" />
            <DatePicker fx:id="toDate" promptText="Đến ngày" />
            <Button text="Lọc" fx:id="filterButton" />
            <Button text="Thêm" fx:id="addButton" />
            <Button text="Sửa" fx:id="editButton" />
            <Button text="Xóa" fx:id="deleteButton" />
        </HBox>
        <TableView fx:id="recordsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="60" />
                <TableColumn fx:id="patientIdCol" text="Mã BN" prefWidth="80" />
                <TableColumn fx:id="visitDateCol" text="Ngày khám" prefWidth="120" />
                <TableColumn fx:id="diagnosisCol" text="Chẩn đoán" prefWidth="240" />
                <TableColumn fx:id="prescriptionCol" text="Đơn thuốc" prefWidth="240" />
                <TableColumn fx:id="notesCol" text="Ghi chú" prefWidth="260" />
            </columns>
        </TableView>
    </children>
</VBox>
