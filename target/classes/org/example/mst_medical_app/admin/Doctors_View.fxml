<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.mst_medical_app.controller.admin.DoctorsController">

    <!-- Header + Search -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="ðŸ‘¨â€âš•ï¸ Doctor Management" />
        <Region HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <TextField fx:id="searchField" prefWidth="250" promptText="Search Doctor..." />
            <Button fx:id="addDoctorBtn" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="+ Add Doctor" />
        </HBox>
    </HBox>

    <!-- Filter -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <ComboBox fx:id="specializationFilter" prefWidth="180" promptText="Specialization" />
        <ComboBox fx:id="statusFilter" prefWidth="150" promptText="Status" />
    </HBox>

    <!-- Báº£ng hiá»ƒn thá»‹ bÃ¡c sÄ© -->
    <TableView fx:id="doctorTable" prefHeight="600"
               VBox.vgrow="ALWAYS"
               style="-fx-font-size: 16px; -fx-cell-size: 36px; -fx-background-radius: 10; -fx-border-color: #e5e7eb; -fx-border-radius: 10;">

        <columns>
            <TableColumn fx:id="colName" text="Full Name" prefWidth="180"/>
            <TableColumn fx:id="colSpecialization" text="Specialization" prefWidth="150"/>
            <TableColumn fx:id="colExperience" text="Experience (Years)" prefWidth="130"/>
            <TableColumn fx:id="colLicense" text="License Number" prefWidth="140"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
            <TableColumn fx:id="colActions" text="Actions" prefWidth="180"/>
        </columns>

    </TableView>

    <padding>
        <Insets right="10" />
    </padding>
</VBox>
